{
  "name": "ws-masking",
  "description": "",
  "version": "0.0.1",
  "type": "commonjs",
  "author": "tsctx",
  "license": "MIT",
  "sideEffects": false,
  "main": "./index.js",
  "types": "./types/index.d.ts",
  "readme": "README.md",
  "exports": {
    ".": [
      {
        "types": "./types/index.d.ts",
        "default": "./index.js"
      }
    ],
    "./wasm": [
      {
        "types": "./types/wasm.d.ts",
        "default": "./wasm.js"
      }
    ],
    "./wasm-sync": [
      {
        "types": "./types/wasm-sync.d.ts",
        "default": "./wasm-sync.js"
      }
    ],
    "./js": [
      {
        "types": "./types/index.d.ts",
        "default": "./index.js"
      }
    ]
  },
  "files": [
    "LICENSE.txt",
    "README.md",
    "./assets/*.js",
    "./collections/*.js",
    "./index.js",
    "./wasm-sync.js",
    "./wasm.js",
    "types/**/*.ts"
  ],
  "typesVersions": {
    "*": {
      "wasm": [
        "./types/wasm.d.ts"
      ],
      "wasm-sync": [
        "./types/wasm-sync.d.ts"
      ],
      "js": [
        "./types/index.d.ts"
      ]
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/node": "^24.10.1",
    "bufferutil": "^4.0.9",
    "c8": "^10.1.3",
    "mitata": "0.1.14",
    "mitata-v1": "npm:mitata@^1.0.34",
    "monocart-coverage-reports": "^2.12.9",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "test": "node --test testing/main.js",
    "test:coverage": "c8 --experimental-monocart --reporter=v8 --reporter=console-details node --run test",
    "build": "yarn build:types",
    "prebuild:types": "node ./scripts/pretypes.mjs",
    "build:types": "tsc -p ./tsconfig.types.json",
    "lint": "biome lint ./",
    "lint:ci": "biome ci --formatter-enabled=true --linter-enabled=true ./",
    "lint:tsc": "tsc --noEmit",
    "lint:fix": "biome lint --write --unsafe ./",
    "format": "biome format ./",
    "check": "biome check --formatter-enabled=true --linter-enabled=true --write --unsafe ./",
    "check:fix": "biome check --formatter-enabled=true --linter-enabled=true --write --unsafe ./",
    "format:fix": "biome format --write ./",
    "update:biome": "biome migrate --config-path=biome.json --write && biome migrate --config-path=linter.json --write && biome migrate --config-path=formatter.json --write",
    "benchmarks-mask:jitless": "node --jitless ./benchmarks/mask.mjs"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsctx/ws-masking.git"
  },
  "bugs": {
    "url": "https://github.com/tsctx/ws-masking/issues"
  }
}
