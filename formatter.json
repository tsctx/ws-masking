{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.3.5/schema.json",
  "formatter": {
    "includes": [
      "**",
      "!coverage/**/*",
      "!dist/**/*",
      "!tsconfig.json",
      "!tsconfig.base.json",
      "!tsconfig.types.json"
    ]
  },
  "javascript": {
    "formatter": {
      "lineEnding": "lf",
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "always",
      "lineWidth": 80,
      "quoteStyle": "double",
      "trailingCommas": "all",
      "arrowParentheses": "always",
      "quoteProperties": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "attributePosition": "auto",
      "jsxQuoteStyle": "double"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "trailingCommas": "none"
    }
  }
}
